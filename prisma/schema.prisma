generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Viesti {
  nimi       String?
  email      String
  aihe       String
  viesti     String
  uutiskirje Boolean?
  milloin    DateTime @default(now())

  @@id([email, milloin])
}

model TuoteKategoria {
  kategoria_id String    @id @default(cuid())
  nimi         String    @unique
  kuvaus       String?
  tuotteet     Tuote[]
  luotu        DateTime  @default(now())
  paivitetty   DateTime? @updatedAt
}

model Tuote {
  tuote_id   String           @id @default(cuid())
  nimi       String           @unique
  kuvaus     String?
  hinta      Decimal
  kategoriat TuoteKategoria[]
  luoja      User             @relation(fields: [luoja_id], references: [id])
  luoja_id   String
  luotu      DateTime         @default(now())
  paivitetty DateTime?        @updatedAt
}

model User {
  id               String         @id @unique
  identifier_token String         @unique
  hashed_password  String?
  RefreshToken     RefreshToken[]
  username         String         @unique
  email            String?
  tuotteet         Tuote[]
  luotu            DateTime       @default(now())
  paivitetty       DateTime?      @updatedAt

  @@map("user")
}

model RefreshToken {
  id            Int    @id @unique @default(autoincrement())
  refresh_token String @unique
  user          User   @relation(references: [id], fields: [user_id], onDelete: Cascade)
  user_id       String

  @@index([user_id])
  @@map("refresh_token")
}
